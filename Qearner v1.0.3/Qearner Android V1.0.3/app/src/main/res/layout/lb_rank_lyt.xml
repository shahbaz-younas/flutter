<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topLyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_20dp"
    android:paddingBottom="@dimen/margin_20dp"
    android:paddingStart="@dimen/margin_dp"
    android:paddingEnd="@dimen/margin_dp"
    android:background="@drawable/bottom_curve_bg"
    android:orientation="horizontal"
    android:weightSum="3"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/lytRank2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:gravity="bottom"
android:visibility="invisible"

        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/lyt2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin_25dp"
            android:layout_gravity="center"
            android:background="@drawable/second_rank_bg">

            <com.qearner.quiz.UI.CircleImageView
                android:id="@+id/imgRank2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvRank2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/txt_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvScore2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/zero"
            android:textColor="@color/txt_color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytRank1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
android:layout_marginBottom="@dimen/margin_20dp"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/crown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/crown"
            tools:ignore="ContentDescription" />


        <RelativeLayout
            android:id="@+id/lyt1"
            android:layout_width="130dp"
            android:layout_height="130dp"

            android:background="@drawable/first_rank_bg">

            <com.qearner.quiz.UI.CircleImageView
                android:id="@+id/imgRank1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
             android:layout_margin="@dimen/margin_7dp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tvRank1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/txt_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvScore1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/zero"
            android:textColor="@color/txt_color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytRank3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:gravity="bottom"
        android:visibility="invisible"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:id="@+id/lyt3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_25dp"
            android:background="@drawable/third_rank_bg">

            <com.qearner.quiz.UI.CircleImageView
                android:id="@+id/imgRank3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/margin_7dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:layout_marginEnd="@dimen/margin_7dp"
                android:layout_marginBottom="@dimen/margin_7dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvRank3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/txt_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvScore3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/zero"
            android:textColor="@color/txt_color"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

