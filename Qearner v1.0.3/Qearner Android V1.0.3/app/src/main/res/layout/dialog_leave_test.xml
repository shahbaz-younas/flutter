<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_color_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg_radius_5"
        android:backgroundTint="@color/card_color"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:src="@drawable/ic_quitgame"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtFirstmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_dp"
            android:layout_marginTop="@dimen/margin_dp"
            android:layout_marginEnd="@dimen/margin_dp"
            android:text="@string/leave_msg_1"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/mid_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_dp"
            android:text="@string/leave_msg_2"
            android:textAlignment="center"
            android:textColor="@color/txt_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/btnResume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/colorOnSurface"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_dp"
                android:text="@string/no"
                android:textColor="@color/txt_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnLeave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/card_color_light"
                android:gravity="center"
                android:padding="@dimen/margin_dp"
                android:text="@string/yes"
                android:textColor="@color/txt_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>