<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_color_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg_radius_5"
        android:backgroundTint="@color/card_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvExit"
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_10dp"
            android:background="@drawable/ic_close" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:src="@drawable/ic_quitgame"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
           android:layout_margin="@dimen/margin_20dp"
            android:text="@string/msg_player_not_available"
            android:textColor="@color/txt_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />



        <LinearLayout
            android:id="@+id/tryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:id="@+id/btnRobot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/colorOnSurface"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_dp"
                android:text="@string/play_with_computer1"
                android:textColor="@color/txt_color"
             android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnTryAgain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/card_color_light"
                android:gravity="center"
                android:padding="@dimen/margin_dp"
                android:text="@string/try_again1"
                android:textColor="@color/txt_color"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
