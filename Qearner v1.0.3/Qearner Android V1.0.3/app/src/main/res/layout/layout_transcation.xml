<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_lyt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_dp"
    android:layout_marginEnd="@dimen/margin_20dp"
    android:paddingTop="@dimen/margin_7dp"
    android:paddingBottom="@dimen/margin_7dp">

    <RelativeLayout
        android:id="@+id/mainRely"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_toStartOf="@+id/relLayout">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/museo_semi_bold"
                android:lineSpacingExtra="4sp"
                android:maxLines="2"
                android:text="@string/category"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/txt_color" />


            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:layout_toEndOf="@+id/txtTypeTwo"
                android:text="@string/name"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/txtTypeTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginTop="@dimen/margin_7dp"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/text_12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:minWidth="60dp"
            android:background="@drawable/payment_square"
            >

            <TextView
                android:id="@+id/tvCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/margin_5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/txt_color"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mainRely"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/card_color_light" />
</RelativeLayout>


