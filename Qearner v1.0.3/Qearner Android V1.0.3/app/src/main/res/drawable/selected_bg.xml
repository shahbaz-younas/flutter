<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle"
            >
            <gradient
                android:angle="90"
                android:endColor="@color/start"
                android:startColor="@color/end"/>
            <corners android:radius="@dimen/margin_5dp" />
        </shape>
    </item>
    <item
android:top="2dp"
        android:bottom="2dp"
        android:start="2dp"
        android:end="2dp"
        android:drawable="@drawable/ic_done"/>
</layer-list>